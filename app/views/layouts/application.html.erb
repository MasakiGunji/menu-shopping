<!DOCTYPE html>
<html>
  <head>
    <title>MenuShopping</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark nav-font">
      <div class="container">
        <div class="navbar-brand nav-font"><%= link_to 'Menu&Shopping', root_path, class:"text-light mr-3 nav-font" %></div>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon bg"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <% if admin_signed_in? %>
              <li class="nav-item"><%= link_to 'みんなのレシピ', recipes_index_all_path, class:"nav-link text-light" %></li>
              <li class="nav-item"><%= link_to '食材一覧', admin_foods_path, class:"nav-link text-light" %></li>
              <li class="nav-item"><%= link_to 'レシピジャンル', admin_recipe_genres_path, class:"nav-link text-light" %></li>
            <% else %>
              <li class="nav-item"><%= link_to 'みんなのレシピ', recipes_index_all_path, class:"nav-link text-light" %></li>
              <li class="nav-item"><%= link_to 'マイレシピ', recipes_path, class:"nav-link text-light" %></li>
              <li class="nav-item"><%= link_to 'レシピを書く', new_recipe_path, class:"nav-link text-light" %></li>
              <li class="nav-item"><%= link_to '献立リスト', purchas_recipes_path, class:"nav-link text-light" %></li>
            <% end %>
          </ul>

          <ul class="navbar-nav">
            <% if end_user_signed_in? %>
              <li class="nav-item"><%= link_to 'マイページ', my_page_path, class:"nav-link text-light" %></li>
              <li class="nav-item"><%= link_to 'ログアウト', destroy_end_user_session_path, method: :delete, class:"nav-link text-light" %></li>
            <% elsif admin_signed_in? %>
              <li class="nav-item"><%= link_to '管理者画面', admin_path, class:"nav-link text-light" %></li>
              <li class="nav-item"><%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class:"nav-link text-light" %></li>
            <% else %>
              <li class="nav-item"><%= link_to '新規登録', new_end_user_registration_path, class:"nav-link text-light" %></li>
              <li class="nav-item"><%= link_to 'ログイン', new_end_user_session_path, class:"nav-link text-light" %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
    <%= yield %>
    <footer class="footer bg-light">
      <div class="container">
        <p class="text-muted float-right pt-2">Copyright(C) Menu&Shopping.</p>
      </div>
    </footer>
  </body>
</html>
