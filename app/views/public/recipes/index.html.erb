<div class="container mt-4">
  <div class="row">
    <h2 class="ml-5">マイレシピ</h2>
  </div>
  <div class="row mt-3 mb-5">
    <div class="col">
      <ul class="nav nav-pills nav-fill">
        <li class="nav-item border">
          <% if @recipe_genre %>
            <%= link_to '新着', recipes_path,class: "nav-link bg-light" %>
          <% else %>
            <%= link_to '新着', recipes_path,class: "nav-link active" %>
          <% end %>
        </li>
        <% @recipe_genres.each do |recipe_genre|%>
        <li class="nav-item border">
          <% if @recipe_genre %>
            <% if recipe_genre.id == @recipe_genre.id %>
              <%= link_to recipe_genre.name, recipes_path(id: recipe_genre.id), class: "nav-link active" %>
            <% else %>
              <%= link_to recipe_genre.name, recipes_path(id: recipe_genre.id), class: "nav-link bg-light" %>
            <% end %>
          <% else %>
            <%= link_to recipe_genre.name, recipes_path(id: recipe_genre.id), class: "nav-link bg-light" %>
          <% end %>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="row">
    <% @recipes.each do |recipe| %>
    <div class="col-md-6 col-lg-3 mb-3">
      <div class="card">
        <div class="img-box">
          <%= link_to recipe_path(recipe) do %>
            <%= attachment_image_tag recipe, :image, class:"card-img-top img-content" %>
          <% end %>
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= link_to recipe.name, recipe_path(recipe) %></h5>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>
