<div class="container">
  <div class="row">
    <div class="col-xs-2">
      <table class="table table-striped">
      	<thead>
      		<tr>
      			<th>ジャンル検索</th>
      		</tr>
      	</thead>
      	<tbody>
        	<% @recipe_genres.each do |recipe_genre|%>
      		<tr>
      			<td>
      			  <%= form_tag recipes_path, method: :get do %>
      			    <%= hidden_field_tag :id, recipe_genre.id %>
      			    <%= submit_tag recipe_genre.name %>
      			  <% end %>
      			</td>
      		</tr>
      		<% end %>
      	</tbody>
      </table>
    </div>
    <div class="col">
      <h1>マイレシピ一覧</h1>
      <% @recipes.each do |recipe| %>
        <%= link_to recipe_path(recipe) do %>
          <%= attachment_image_tag recipe, :image, :fill, 200, 200 %>
          <h3><%= recipe.name %></h3>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
