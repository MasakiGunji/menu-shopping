<div class="container">
  <div class="row mt-5">
    <div class="col-8 mx-auto">
      <h2>新規登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <%= render "end_users/shared/error_messages", resource: resource %>
          <table class="table">
            <tbody>
              <tr>
                <td class="align-middle" style="width: 300px">名前</td>
                <td><%= f.text_field :name, autofocus: true, class:"form-control input-sm" %></td>
              </tr>
            </tbody>
            <tbody>
              <tr>
                <td class="align-middle">メールアドレス</td>
                <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control input-sm" %></td>
              </tr>
              <tr>
            </tbody>
            <tbody>
              <tr>
                <td class="align-middle">現在のパスワード</td>
                <td><%= f.password_field :current_password, autocomplete: "current-password", class:"form-control input-sm" %></td>
              </tr>
              <tr>
            </tbody>
            <tbody>
              <tr>
                <td class="align-middle">変更後パスワード(6文字以上)</td>
                <td><%= f.password_field :password, autocomplete: "new-password", class:"form-control input-sm" %></td>
              </tr>
              <tr>
            </tbody>
            <tbody>
              <tr>
                <td class="align-middle">変更後パスワード(確認用)</td>
                <td><%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control input-sm" %></td>
              </tr>
              <tr>
            </tbody>
          </table>
          <%= link_to 'ログインはこちら', new_end_user_session_path, class:'btn btn-success float-right ml-5' %>
          <%= f.submit "会員登録", class:'btn btn-primary float-right' %>
        </div>
      <% end %>
    </div>
  </div>
</div>


