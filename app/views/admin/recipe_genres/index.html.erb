<div class="container">
  <div class="row">
    <div class="col">
      <h1>レシピジャンル一覧</h1>
        <%= form_with model: @recipe_genre, url: admin_recipe_genres_path, local: true do |f| %>
        <P>レシピジャンル名</P>
        <%= f.text_field :name, class: "form-control" %>
        </br><%= f.submit '追加', class:"btn btn-primary" %>
        <% end %>

        <% @recipe_genres.each do |recipe_genre| %>
          </BR>
          <%= recipe_genre.name %>
          <%= form_with model: recipe_genre, url: admin_recipe_genre_path(recipe_genre), local: true do |f| %>
            <%= f.text_field :name %>
            <%= f.submit '変更', class:"btn btn-primary" %>
          <% end %>
          <%= link_to '削除', admin_recipe_genre_path(recipe_genre), method: :delete, class:"btn btn-danger", "data-confirm" => "本当に削除しますか？" %>
        <% end %>
    </div>
  </div>
</div>

