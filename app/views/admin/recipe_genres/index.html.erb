<div class="container">
  <div class="row mt-5">
    <div class="col-8 mx-auto">
      <h3>レシピジャンル一覧</h3>
      <%= form_with model: @recipe_genre, url: admin_recipe_genres_path, local: true do |f| %>
      <span class="mr-5">レシピジャンル名</span>
      <div class="row">
        <div class="col-10">
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="col-2">
          <%= f.submit '追加', class:"btn btn-primary" %>
        </div>
      </div>
      <% end %>

      <table class="table table-responsive mt-3">
        <thead>
          <tr>
            <th>ジャンル名</th>
            <th>ジャンル名(変更)</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <% @recipe_genres.each do |recipe_genre| %>
          <tbody>
            <tr>
              <td class="py-1"><%= recipe_genre.name %></td>
              <%= form_with model: recipe_genre, url: admin_recipe_genre_path(recipe_genre), local: true do |f| %>
                <td class="py-1"><%= f.text_field :name %></td>
                <td class="py-1"><%= f.submit '変更', class:'btn btn-success btn-sm' %></td>
              <% end %>
              <td class="py-1"><%= link_to '削除', admin_recipe_genre_path(recipe_genre), method: :delete, class:"btn btn-danger btn-sm", "data-confirm" => "本当に削除しますか？" %></td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>

