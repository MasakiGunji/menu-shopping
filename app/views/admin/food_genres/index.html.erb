<div class="container">
  <div class="row mt-5">
    <div class="col-8 mx-auto">
      <h3>食材ジャンル一覧</h3>
      <%= form_with model: @food_genre, url: admin_food_genres_path, local: true do |f| %>
      <span class="mr-5">食材ジャンル名</span>
      <span class="ml-5">
        買い物リスト
        <%= f.radio_button :status, true, checked: true  %>表示
        <%= f.radio_button :status, false %>非表示
      </span>
      <div class="row">
        <div class="col-10">
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="col-2">
          <%= f.submit '追加', class:"btn btn-primary" %>
        </div>
      </div>
      <% end %>

      <table class="table table-responsive mt-3">
        <thead>
          <tr>
            <th>ジャンル名</th>
            <th>ジャンル名(変更)</th>
            <th>買い物リスト</th>
            <th></th>
            <th></th>
          </tr>
        </thead>

        <% @food_genres.each do |food_genre| %>
          <tbody>
            <tr>
              <td class="py-1"><%= food_genre.name %></td>
              <%= form_with model: food_genre, url: admin_food_genre_path(food_genre),class:"inline", local: true do |f| %>
                <td class="py-1"><%= f.text_field :name %></td>
                <td class="py-1"><%= f.radio_button :status, true, checked: true  %>表示｜<%= f.radio_button :status, false %>非表示</td>
                <td class="py-1"><%= f.submit '変更', class:'btn btn-success btn-sm' %></td>
              <% end %>
              <td class="py-1"><%= link_to '削除', admin_food_genre_path(food_genre), method: :delete, class:"btn btn-danger btn-sm", "data-confirm" => "本当に削除しますか？" %></td>
            </tr>
          </tbody>
        <% end %>
      </table>

    </div>
  </div>
</div>

